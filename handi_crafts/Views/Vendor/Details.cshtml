@model handi_crafts.Models.Product
@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_VendorLayout.cshtml";
}
@{
	ViewBag.Vendor = ViewBag.VendorInfo;
}








<section style="background-color: #eee;">
  <div class="container py-5">
    <div class="row justify-content-center mb-3">
      <div class="col-md-12 col-xl-10">
        <div class="card shadow-0 border rounded-3">
          <div class="card-body">
            <div class="row">
              <div class="col-md-12 col-lg-3 col-xl-3 mb-4 mb-lg-0">
                <div class="bg-image hover-zoom ripple rounded ripple-surface">
                 <img src=@Url.Content("~/Images/" + Model.Imagepath) asp-append-version="true" width="100" height="100" 
                    class="w-100" />
                  <a href="#!">
                    <div class="hover-overlay">
                      <div class="mask" style="background-color: rgba(253, 253, 253, 0.15);"></div>
                    </div>
                  </a>
                </div>
              </div>
              <div class="col-md-6 col-lg-6 col-xl-6">
                <h5>             @Html.DisplayFor(model => model.Name)</h5>
 
                <div class="mt-1 mb-0 text-muted small">
                
                 
                  <span class="text-primary"> • </span>
                     <span>        @Html.DisplayFor(model => model.Category.CategoryName)<br /></span>
               
                </div>
                  <div class="mt-1 mb-0 text-muted small">
                
                 
                  <span class="text-primary"> • </span>
   <span>        @Html.DisplayFor(model => model.Descriptionn)<br /></span>                </div>
        
              </div>
              <div class="col-md-6 col-lg-3 col-xl-3 border-sm-start-none border-start">
                <div class="d-flex flex-row align-items-center mb-1">
                  <h4 class="mb-1 me-1">  $@Html.DisplayFor(model => model.Price)</h4>
                </div>
           
                <div class="d-flex flex-column mt-4">
						<a  class="btn btn-primary btn-sm" asp-action = "Crafts" >Back to crafts</a>	</div>
            
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

  </div>
</section>





